        </form>
        <label for="search-input" id="searchIcon" href=""><i class="fas fa-search"></i></label>
        <a id="cartLink" href="@Url.Action("index", "SeafreshCart")"><i class="fas fa-shopping-cart"></i></a>
    </div>

    <div id="sidebarMenu" class="">
        <ul class="sidebarMenuInner">
            <li><a href="@Url.Action("index", "SeafreshHome")">Home</a></li>
