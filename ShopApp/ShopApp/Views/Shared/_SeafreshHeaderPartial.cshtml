                    <span class="cart-item-delete-btn"><i class="fas fa-times-circle"></i></span>
                </div>

                <div class="cart-item-image">
                    <img src="" alt="" />
                </div>

                <div class="cart-item-description">
                    <span class="item-category">Red Emperor</span>
                    <span></span>
                    <span></span>
                </div>

